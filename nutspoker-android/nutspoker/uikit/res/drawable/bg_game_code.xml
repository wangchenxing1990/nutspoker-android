<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/game_code_normal"/>
            <corners android:radius="@dimen/game_code_height"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/game_code_press"/>
            <corners android:radius="@dimen/game_code_height"/>
        </shape>
    </item>
</selector>