<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape>
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:radius="@dimen/dialog_common_radius" android:topLeftRadius="@dimen/dialog_common_radius" android:topRightRadius="@dimen/dialog_common_radius" />
            <!-- 设置圆角半径 -->

            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <!-- 圆角 -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp" android:radius="@dimen/dialog_common_radius" android:topLeftRadius="@dimen/dialog_common_radius" android:topRightRadius="@dimen/dialog_common_radius" />
            <!-- 设置圆角半径 -->
            <solid android:color="@color/white" />
        </shape>
    </item>

</selector>