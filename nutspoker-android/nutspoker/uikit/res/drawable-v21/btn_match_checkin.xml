<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/list_item_bg_ripple">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape>
                    <corners android:radius="@dimen/btn_common_radius" />
                    <solid android:color="@color/match_checkin_disable" />
                </shape>
            </item>

            <item android:state_pressed="true">
                <shape>
                    <corners android:radius="@dimen/btn_common_radius" />
                    <!-- 设置填充颜色 -->
                    <solid android:color="@color/match_checkin_press" />
                </shape>
            </item>



            <item android:state_pressed="false">
                <shape>
                    <corners android:radius="@dimen/btn_common_radius" />
                    <!-- 设置填充颜色 -->
                    <solid android:color="@color/match_checkin_normal" />
                </shape>
            </item>

            <item>
                <shape>
                    <corners android:radius="@dimen/btn_common_radius" />
                    <!-- 设置填充颜色 -->
                    <solid android:color="@color/match_checkin_normal" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>
