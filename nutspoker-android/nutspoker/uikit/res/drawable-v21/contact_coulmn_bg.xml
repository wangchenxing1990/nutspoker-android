<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/list_item_bg_ripple"
    android:radius="3dp">

    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <!-- 设置几何图形四个角的弧度 -->
                    <corners android:radius="3dp" />
                    <!-- 设置填充颜色 -->
                    <solid android:color="@color/list_item_bg_press" />
                </shape>
            </item>
            <item android:state_pressed="false">
                <shape>
                    <!-- 设置几何图形四个角的弧度 -->
                    <corners android:radius="3dp" />
                    <!-- 设置填充颜色 -->
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </selector>
    </item>

    <item android:id="@android:id/mask" android:width="5dp" android:height="5dp">
        <shape>
            <!-- 设置几何图形四个角的弧度 -->
            <corners android:radius="3dp" />
            <!-- 设置填充颜色 -->
            <solid android:color="@color/list_item_bg_ripple" />
        </shape>
    </item>
</ripple>