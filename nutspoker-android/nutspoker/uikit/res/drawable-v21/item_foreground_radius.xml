<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/list_item_bg_ripple">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <corners android:radius="@dimen/bg_club_common_radius"/>
                    <solid android:color="@color/list_item_bg_press"/>
                </shape>
            </item>


            <item android:state_pressed="false">
                <shape>
                    <corners android:radius="@dimen/bg_club_common_radius"/>
                    <solid android:color="@color/transparent"/>
                </shape>
            </item>
        </selector>
    </item>



    <item android:id="@android:id/mask">
        <shape>
            <corners android:radius="@dimen/bg_club_common_radius" />
            <solid android:color="@color/list_item_bg_ripple" />
        </shape>
    </item>
</ripple>