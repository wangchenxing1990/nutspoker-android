            </item>

            <item android:state_pressed="false">
                <shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <!-- 设置几何图形四个角的弧度 -->
                    <corners android:radius="@dimen/btn_common_radius" />
                    <!-- 设置填充颜色 -->
                    <solid android:color="@color/red_normal" />
                    <!-- 设置几何形状绘制边框 红色边框 -->
                    <!--<stroke-->
                    <!--android:width="0dp"-->
