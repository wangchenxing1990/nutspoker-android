<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/list_item_bg_ripple">
    <item>
        <selector>
            <item android:state_enabled="false">
                <shape>
                    <corners android:radius="@dimen/btn_common_radius"/>
                    <solid android:color="@color/btn_login_bg_disable_color"/>
