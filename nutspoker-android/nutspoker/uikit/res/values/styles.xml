<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="list_view" parent="@android:style/Widget.ListView">
        <item name="android:scrollbarThumbVertical">@drawable/nim_scrollbar_handle_holo_dark</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/nim_scrollbar_handle_holo_dark</item>
    </style>

    <style name="horizontal_light_thin_divider">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/main_list_divider</item>
    </style>

    <style name="horizontal_deep_thick_divider">
        <item name="android:layout_height">@dimen/split_one_dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@color/color_gray_d9d9d9</item>
    </style>

    <style name="custom_dialog_message_text_style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/color_black_333333</item>
        <item name="android:paddingLeft">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/custom_dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/custom_dialog_padding_vertical</item>
        <item name="android:background">@drawable/nim_list_item_selector</item>
    </style>

    <style name="dialog_title_text_style">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/text_select_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_vertical</item>
    </style>

    <style name="dialog_message_text_style">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/color_black_333333</item>
        <item name="android:paddingLeft">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingRight">@dimen/dialog_text_margin_horizontal</item>
        <item name="android:paddingTop">@dimen/dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/dialog_padding_vertical</item>
    </style>

    <style name="dialog_default_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="dialog_bg_transparent_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="dialog_button_text_style">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/nim_list_item_selector</item>
        <item name="android:paddingTop">@dimen/custom_dialog_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/custom_dialog_padding_vertical</item>
    </style>

    <!-- 右下角有输入字符长度限制 用于对话框 -->
    <style name="easy_dialog_edit_text_style" parent="@android:style/Widget.EditText">
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/nim_easy_edit_text_dialog_bg</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="transparent_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="grid_view" parent="@android:style/Widget.GridView"></style>

    <style name="sdk_share_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="easy_dialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 后面的activity变暗 -->
    </style>

    <style name="scroll_view" parent="@android:style/Widget.ScrollView">
        <item name="android:scrollbarThumbVertical">@drawable/nim_scrollbar_handle_holo_dark</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/nim_scrollbar_handle_holo_dark</item>
    </style>

    <style name="blue_bottom_line_edit_text_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/nim_blue_edit_text_bg</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Dark ActionBar -->
    <style name="DarkBaseActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/DarkBaseActionBarStyle</item>
        <item name="homeAsUpIndicator">@mipmap/btn_back_normal</item>
        <item name="android:actionBarStyle">@style/DarkBaseActionBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Overlay Dark ActionBar -->
    <style name="DarkOverlayActionBarTheme" parent="@style/DarkBaseActionBarTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="DarkBaseActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/nim_actionbar_black_bg</item>
        <item name="background">@drawable/nim_actionbar_black_bg</item>
        <item name="height">@dimen/action_bar_height</item>
        <item name="icon">@color/transparent</item>
        <item name="titleTextStyle">@style/DarkActionBarTitleTextStyle</item>
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="android:icon">@color/transparent</item>
        <item name="android:titleTextStyle">@style/DarkActionBarTitleTextStyle</item>
    </style>

    <style name="DarkActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="record_details_text_style_new">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 自定义数字键盘text -->
    <style name="num_keyboard_num_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/num_keyboard_column_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/num_keyboard_text_color</item>
        <item name="android:background">@drawable/common_column_bg</item>
    </style>

    <style name="home_tab_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/home_tab_text_color</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
    </style>

    <style name="home_tab_item_new_notify_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/unread_badge_bg_height</item>
        <item name="android:minWidth">@dimen/unread_badge_bg_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/unread_badge_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:text">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="icon_new_me_column_style">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:src">@mipmap/icon_new_notify</item>
    </style>

    <style name="rl_head_bg_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_bar_height</item>
        <item name="android:minHeight">@dimen/action_bar_height</item>
        <item name="android:background">@color/head_bg</item>
    </style>

    <style name="tv_head_common_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tv_head_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="team_paiju_top_four">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/club_paiju_list_insurance</item>
        <item name="android:textSize">9dp</item>
        <item name="android:background">@drawable/bg_paiju_list_ante</item>
        <item name="android:gravity">center</item>
    </style>
</resources>