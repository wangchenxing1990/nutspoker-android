<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:background="#296975"
             android:paddingTop="25dp"
             android:foreground="@drawable/fg_horde"
             android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content" android:layout_height="48dp"
              android:id="@+id/tv_control_content"
              android:layout_gravity="center_vertical"
              android:text="德州扑克有消息"
              android:paddingLeft="15dp"
              android:gravity="center"
              android:textColor="@color/white"/>

    <TextView android:layout_width="wrap_content" android:layout_height="48dp"
              android:id="@+id/control_go_to_see"
              android:text="点击查看"
              android:layout_gravity="center_vertical|right"
              android:drawableRight="@mipmap/icon_common_arrow_normal"
              android:drawablePadding="5dp"
              android:paddingRight="10dp"
              android:drawableTint="@color/white"
              android:gravity="center"
              android:textColor="@color/white"/>
</FrameLayout>