<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/register_page_bg_color"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/shop_text_no_select_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/common_column_bg">

        <TextView
            android:id="@+id/pop_pay_menu_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center_vertical|left"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:textColor="@color/shop_text_no_select_color"
            android:text="@string/cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="14dp"
            android:text="支付订单"
            android:textColor="@color/text_select_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@drawable/common_column_bg"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="订单金额"
            android:textColor="@color/text_select_color"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/pop_pay_menu_rmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥30"
            android:textColor="@color/text_select_color"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_pay_menu_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_column_bg"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/pay_ali" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="支付宝支付"
            android:textColor="@color/text_select_color"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/pop_pay_menu_alipay_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/nim_contact_checkbox_checked_green" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/pop_pay_menu_weixin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_column_bg"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/pay_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="微信支付"
            android:textColor="@color/text_select_color"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/pop_pay_menu_weixin_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/nim_contact_checkbox_unchecked" />
    </LinearLayout>


    <Button
        android:id="@+id/pop_pay_menu_sure"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_common_height"
        android:layout_margin="10dp"
        android:background="@drawable/bg_login_btn"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>