<?xml version="1.0" encoding="utf-8"?><!--android:background="@drawable/nim_contact_list_item_selecter"-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/common_column_bg"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <ImageView
        android:id="@+id/imgSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:contentDescription="@string/empty"
        android:src="@drawable/nim_contact_select_dot_avatar" />

    <com.netease.nim.uikit.common.ui.imageview.HeadImageView
        android:id="@+id/img_head"
        android:layout_width="@dimen/avatar_size_in_contact_list"
        android:layout_height="@dimen/avatar_size_in_contact_list"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgSelect" />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_head"
        android:drawablePadding="4dip"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_select_color"
        android:textSize="18sp"
        tools:text="周智慧" />

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/register_page_bg_color"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

