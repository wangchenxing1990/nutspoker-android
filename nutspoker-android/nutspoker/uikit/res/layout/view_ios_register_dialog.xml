<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_custom_bg"
    android:paddingTop="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/text_select_color"
        android:paddingBottom="10dp"
        android:textSize="17dp"
        android:text="数据不互通说明"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/register_page_bg_color"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@mipmap/iv_ios_register_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/login_solid_color"
        android:padding="20dp"
        android:textSize="17dp"
        android:text="欢迎回到扑克部落"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/shop_text_no_select_color"
        android:textSize="17dp"
        android:paddingBottom="50dp"
        android:text="使用同一账号在IOS和Android设备登录
【扑克部落】时，所有数据均不互通共享，包括个人战绩、俱乐部、金币、钻石，但可同时进行游戏，给您造成不便，敬请谅解！"/>

    <Button
        android:id="@+id/ios_register_dialog_positive_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:background="@drawable/bg_login_btn"
        android:textColor="@color/white"
        android:text="设置个人资料"/>
</LinearLayout>