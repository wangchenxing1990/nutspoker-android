<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <!-- 设置几何图形四个角的弧度 -->
            <corners android:radius="@dimen/dialog_common_radius" />
            <!-- 设置填充颜色 -->
            <solid android:color="@color/head_title_color" />
            <!-- 设置几何形状绘制边框 -->
            <stroke android:width="0dp" android:color="@android:color/transparent" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <!-- 设置几何图形四个角的弧度 -->
            <corners android:radius="@dimen/dialog_common_radius" />
            <!-- 设置填充颜色 -->
            <solid android:color="@color/head_title_color" />
            <!-- 设置几何形状绘制边框 -->
            <stroke android:width="0dp" android:color="@android:color/transparent" />

        </shape>
    </item>
    <item>
        <shape>
            <!-- 设置几何图形四个角的弧度 -->
            <corners android:radius="@dimen/dialog_common_radius" />
            <!-- 设置填充颜色 为白色 -->
            <solid android:color="@android:color/transparent" />
            <!-- 设置几何形状绘制边框 红色边框 -->
            <stroke android:width="1dp" android:color="@color/head_title_color" />
        </shape>
    </item>
</selector>