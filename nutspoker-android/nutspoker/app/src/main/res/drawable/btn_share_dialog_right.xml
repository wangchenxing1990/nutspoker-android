<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <!-- 设置几何图形四个角的弧度 -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/btn_common_small_radius" android:radius="@dimen/btn_common_small_radius" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <!-- 设置填充颜色 -->
            <solid android:color="@color/sharetosession_dialog_btn_press_color" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <!-- 设置几何图形四个角的弧度 -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/btn_common_small_radius" android:radius="@dimen/btn_common_small_radius" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <!-- 设置填充颜色 -->
            <solid android:color="@color/sharetosession_dialog_btn_normal_color" />
        </shape>
    </item>
</selector>