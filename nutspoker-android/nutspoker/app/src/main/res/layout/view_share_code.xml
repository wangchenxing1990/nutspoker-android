<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_share_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/share_code_normal_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_code_game_mode_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@mipmap/message_system" />

    <RelativeLayout
        android:id="@+id/rl_share_content"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="100dp"
        android:background="@mipmap/message_system">

        <RelativeLayout
            android:id="@+id/rl_share_content_code"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_code_first"
                    android:layout_width="@dimen/share_code_width"
                    android:layout_height="@dimen/share_code_height"
                    android:scaleType="center"
                    android:src="@mipmap/message_system" />

                <ImageView
                    android:id="@+id/iv_code_sencond"
                    android:layout_width="@dimen/share_code_width"
                    android:layout_height="@dimen/share_code_height"
                    android:layout_marginLeft="1dp"
                    android:scaleType="center"
                    android:src="@mipmap/message_system" />

                <ImageView
                    android:id="@+id/iv_code_third"
                    android:layout_width="@dimen/share_code_width"
                    android:layout_height="@dimen/share_code_height"
                    android:layout_marginLeft="1dp"
                    android:scaleType="center"
                    android:src="@mipmap/message_system" />

                <ImageView
                    android:id="@+id/iv_code_fourth"
                    android:layout_width="@dimen/share_code_width"
                    android:layout_height="@dimen/share_code_height"
                    android:layout_marginLeft="1dp"
                    android:scaleType="center"
                    android:src="@mipmap/message_system" />

                <ImageView
                    android:id="@+id/iv_code_fifth"
                    android:layout_width="@dimen/share_code_width"
                    android:layout_height="@dimen/share_code_height"
                    android:layout_marginLeft="1dp"
                    android:src="@mipmap/message_system" />

                <ImageView
                    android:id="@+id/iv_code_sixth"
                    android:layout_width="@dimen/share_code_width"
                    android:layout_height="@dimen/share_code_height"
                    android:layout_marginLeft="1dp"
                    android:src="@mipmap/message_system" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/rl_share_content_code"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:src="@mipmap/icon_share_code_logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_share_content_code"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:src="@mipmap/icon_share_code_text" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_share_game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_share_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_game_other_info"
            style="@style/tv_game_share_code_style"
            android:layout_gravity="center"
            android:textColor="@color/share_code_other_text_color"
            android:textSize="16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_mtt_time"
            style="@style/tv_game_share_code_style"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/share_code_other_text_color"
            android:textSize="16sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.netease.nim.uikit.common.ui.imageview.HeadImageView
                android:id="@+id/iv_game_creator_head"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/default_male_head" />

            <TextView
                android:id="@+id/tv_game_name"
                style="@style/tv_game_share_code_style"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_share_game_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/share_code_config_bg"
        android:gravity="left"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_game_checkin_fee"
            style="@style/tv_game_share_code_style" />

        <TextView
            android:id="@+id/tv_game_chips"
            style="@style/tv_game_share_code_style" />

        <TextView
            android:id="@+id/tv_game_blinds"
            style="@style/tv_game_share_code_style" />

        <TextView
            android:id="@+id/tv_game_match_player"
            style="@style/tv_game_share_code_style" />

        <TextView
            android:id="@+id/tv_game_time"
            style="@style/tv_game_share_code_style" />

        <TextView
            android:id="@+id/tv_game_ante"
            style="@style/tv_game_share_code_style" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="@string/share_code_desc"
        android:textColor="@color/gray_auxiliary_text_color"
        android:textSize="12sp" />
</RelativeLayout>