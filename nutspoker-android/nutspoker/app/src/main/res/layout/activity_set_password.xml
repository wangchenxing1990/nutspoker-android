<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_page_bg_color"
    android:orientation="vertical">

    <include layout="@layout/view_common_head" />

    <com.htgames.nutspoker.view.widget.ClearableEditTextWithIcon
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_size_50"
        android:inputType="textPassword"
        android:id="@+id/set_password_et"
        android:layout_marginLeft="@dimen/np_login_margin"
        android:layout_marginRight="@dimen/np_login_margin"
        android:textCursorDrawable="@null"
        android:textSize="14dp"
        android:background="@null"
        android:textColorHint="@color/login_grey_color"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:hint="@string/register_password" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/np_login_margin"
        android:layout_marginRight="@dimen/np_login_margin"
        android:id="@+id/set_password_long_divider_one"
        android:background="@color/login_grey_color" />

    <com.htgames.nutspoker.view.widget.ClearableEditTextWithIcon
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/set_nick_et"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/np_login_margin"
        android:layout_marginRight="@dimen/np_login_margin"
        android:textCursorDrawable="@null"
        android:textSize="14dp"
        android:background="@null"
        android:textColorHint="@color/login_grey_color"
        android:gravity="center_vertical"
        android:hint="@string/register_nickname" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="@dimen/np_login_margin"
        android:layout_marginRight="@dimen/np_login_margin"
        android:id="@+id/set_password_long_divider_two"
        android:background="@color/login_grey_color" />

    <com.htgames.nutspoker.view.widget.ClearableEditTextWithIcon
        android:layout_marginLeft="@dimen/np_login_margin"
        android:layout_marginRight="@dimen/np_login_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="@null"
        android:textSize="14dp"
        android:id="@+id/edt_invitation_code"
        android:hint="@string/invitation_code"
        android:visibility="gone"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColorHint="@color/login_grey_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/np_login_margin"
        android:layout_marginRight="@dimen/np_login_margin"
        android:id="@+id/set_password_long_divider_three"
        android:background="@color/login_grey_color" />

    <Button
        android:id="@+id/btn_set_password_next_step"
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_common_height"
        android:layout_marginLeft="@dimen/np_login_margin"
        android:layout_marginRight="@dimen/np_login_margin"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_login_btn"
        android:text="@string/register"
        android:textColor="#FFFFFF"
        android:textSize="17dp" />
</LinearLayout>