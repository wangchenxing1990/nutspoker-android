<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools">
    <include layout="@layout/view_common_head" />
    <RelativeLayout
        android:id="@+id/rl_recharge_diamond"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/common_column_bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:id="@+id/tv_diamond_remain_des"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/tv_common_column_title_style"
            android:gravity="center_vertical"
            android:text="钻石余额："/>
        <ImageView
            android:id="@+id/im_diamond"
            android:layout_toRightOf="@+id/tv_diamond_remain_des"
            android:src="@mipmap/icon_me_diamond"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="15dp"/>
        <TextView
            android:id="@+id/tv_diamond_remain_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/tv_common_column_title_style"
            android:layout_toRightOf="@+id/im_diamond"
            android:layout_centerVertical="true"
            tools:text="6666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:text="充值"
            android:drawableRight="@mipmap/icon_common_arrow_normal"
            android:textColor="@color/shop_text_no_select_color"
            android:textSize="15dp" />
    </RelativeLayout>
    <!--                                   **** item ****                                 -->
    <!-- 充值数量  -->
    <RelativeLayout
        android:id="@+id/rl_recharge_fund"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/common_column_bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/tv_common_column_title_style"
            android:gravity="center_vertical"
            android:text="充值数量"/>
        <ImageView
            android:id="@+id/iv_add_fund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_add_fund"/>
        <TextView
            android:id="@+id/tv_recharge_fund_times"
            style="@style/tv_common_column_title_style"
            android:layout_toLeftOf="@+id/iv_add_fund"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="1"/>
        <ImageView
            android:id="@+id/iv_reduce_fund"
            android:layout_toLeftOf="@+id/tv_recharge_fund_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_reduce_fund"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/register_page_bg_color"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <!-- 充值基金 -->
    <RelativeLayout
        android:id="@+id/rl_grant_fund"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/common_column_bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/tv_common_column_title_style"
            android:gravity="center_vertical"
            android:text="充值基金"/>
        <TextView
            android:id="@+id/tv_fund_charge_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            style="@style/tv_common_column_title_style"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            tools:text="32000(送32)"
            android:textColor="@color/shop_text_no_select_color"
            android:textSize="15dp" />
        <ImageView
            android:layout_toLeftOf="@+id/tv_fund_charge_num"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_me_coin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/register_page_bg_color"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <!-- 充值费用 -->
    <RelativeLayout
        android:id="@+id/rl_fund_particulars"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/common_column_bg"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/tv_common_column_title_style"
            android:gravity="center_vertical"
            android:text="充值费用"/>
        <TextView
            android:id="@+id/tv_fund_charge_consume_diamond_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            style="@style/tv_common_column_title_style"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            tools:text="320"
            android:textColor="@color/shop_text_no_select_color"
            android:textSize="15dp" />
        <ImageView
            android:layout_toLeftOf="@+id/tv_fund_charge_consume_diamond_num"
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_me_diamond"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="@color/register_page_bg_color"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_charge_fund"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:background="@drawable/bg_login_btn"
        android:layout_margin="25dp"
        android:text="@string/text_charge" />
</LinearLayout>