<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/frameLayoutHead"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true">

        <com.netease.nim.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/imageViewHeader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/imageViewOwner"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_team_owner"
            tools:visibility="visible"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewAdmin"
            android:layout_width="16dp"
            android:layout_height="16dp"
            tools:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/club_manage_tag"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageViewDeleteTag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            tools:visibility="visible"
            android:contentDescription="@string/empty"
            android:src="@mipmap/icon_team_member_item_delete"
            android:visibility="gone" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frameLayoutHead"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="100dip"
        tools:visibility="visible"
        android:singleLine="true"
        android:textColor="@color/member_grid_text_color"
        android:textSize="12sp"
        android:visibility="gone" />

</RelativeLayout>