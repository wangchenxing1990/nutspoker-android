<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_share_to_session_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.htgames.nutspoker.circle.view.CirclePaijuView
            android:id="@+id/mCirclePaijuView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.htgames.nutspoker.circle.view.CirclePaipuView
            android:id="@+id/mCirclePaipuView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <EditText
            android:id="@+id/edt_share_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_edittext_bg"
            android:hint="@string/leave_message"
            android:padding="10dp"
            android:textColor="@color/sharetosession_dialog_hint_color"
            android:textColorHint="@color/sharetosession_dialog_hint_color" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/sharetosession_dialog_divider_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_share_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_share_dialog_left"
            android:text="@string/cancel"
            android:textColor="@color/sharetosession_dialog_btn_text_color" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/sharetosession_dialog_divider_color" />

        <Button
            android:id="@+id/btn_dialog_share_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_share_dialog_right"
            android:text="@string/send"
            android:textColor="@color/sharetosession_dialog_btn_text_color" />
    </LinearLayout>
</LinearLayout>