<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_size_55"
    android:background="@drawable/common_column_bg">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_size_5"
        android:id="@+id/shop_recycler_item_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_size_5"
        android:src="@mipmap/icon_me_coin"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_recycler_item_chip"
        android:layout_toRightOf="@id/shop_recycler_item_icon"
        android:textSize="@dimen/dp_size_15"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_size_5"
        android:textColor="@color/black"
        android:text="222"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_recycler_item_present"
        android:layout_toRightOf="@id/shop_recycler_item_chip"
        android:textSize="@dimen/dp_size_15"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_size_5"
        android:textColor="@color/shop_text_no_select_color"
        android:text="(222)"/>

    <FrameLayout
        android:layout_width="@dimen/dp_size_90"
        android:layout_height="match_parent"
        android:id="@+id/shop_recycler_item_price_bg"
        android:layout_margin="@dimen/dp_size_8"
        android:background="@drawable/bg_shop_price"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/shop_recycler_item_price"
            android:drawableLeft="@mipmap/diamond_white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="@dimen/dp_size_15"
            android:text=" 100000"
            android:textColor="@color/white" />
    </FrameLayout>
</RelativeLayout>