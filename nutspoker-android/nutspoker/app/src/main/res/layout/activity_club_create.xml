<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    xmlns:tools="http://schemas.android.com/tools"
    <include layout="@layout/view_common_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/action_bar_height"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <com.netease.nim.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/iv_club_head"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/default_club_head" />

        <ImageView
            android:layout_width="162dp"
            android:layout_height="48.8dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-48.8dp"
            android:src="@mipmap/icon_club_mark" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/club_create_name"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <com.htgames.nutspoker.view.widget.ClearableEditTextWithIcon
            android:id="@+id/edt_club_create_name"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textColorHint="@color/edt_common_hint_color"
            android:gravity="left|center_vertical"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textSize="16dp"
            android:layout_height="@dimen/btn_common_height"
            android:layout_marginTop="10dp"
            android:hint="@string/club_create_name_hint"
            android:maxLength="20"
            android:singleLine="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/club_create_area"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_club_create_area"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edt_common_bg"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/icon_common_arrow"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/create_club_region_hint"
            android:textColor="@color/edt_common_hint_color"
            tools:visibility="visible"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_finish"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_common_height"
            android:background="@drawable/bg_login_btn"
            android:textColor="@color/white"
            android:textSize="@dimen/btn_common_text_size"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:text="@string/create_club" />

        <TextView
            android:id="@+id/tv_club_own"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/club_create_already"
            android:textColor="@color/text_select_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_club_create_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            tools:text="@string/club_create_count_is_limit_normal"
            android:textColor="@color/red_press"
            android:textSize="16dp" />
        <LinearLayout
            android:id="@+id/ll_club_create_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_club_create_white_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/become"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/vip_white"
                    android:textColor="#ba9c59"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/can_create"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#ba9c59"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/can_create_club_count"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_club_create_black_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/become"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/vip_black"
                    android:textColor="#ba9c59"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/can_create"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="#ba9c59"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/can_create_club_count"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_upgrade_vip"
                style="@style/btn_common_style"
                android:layout_marginTop="30dp"
                android:text="@string/upgrade_vip" />

            <TextView
                android:id="@+id/tv_vip_is_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/club_create_vip_is_top"
                android:textColor="@color/gray_auxiliary_text_color"
                android:textSize="16sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</merge>