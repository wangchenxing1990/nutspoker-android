<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:gravity="center"
            android:paddingTop="6dp"
            android:textColor="@color/shop_text_no_select_color"
            android:textSize="12dp"
            tools:text="11月24日 15:38" />

    <FrameLayout
            android:id="@+id/ll_buychips_head"
            android:paddingTop="8dp"
            android:paddingBottom="1dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
            <TextView android:id="@+id/tv_game_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:paddingRight="5dp"
                    android:textColor="@color/shop_text_no_select_color"
                    android:textSize="15dp"
                    tools:text="周智慧的MTT3" />
            <ImageView android:id="@+id/iv_buychips_game_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/icon_control_in" />
            <ImageView android:id="@+id/iv_buychips_game_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/icon_control_sign" />
            <View android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            <TextView android:id="@+id/tv_game_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:drawableLeft="@mipmap/icon_club_chat_member"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/shop_text_no_select_color"
                    android:textSize="12dp"
                    tools:text="0/9" />
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
            android:id="@+id/buy_chips_can_longpress_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/match_room_common_column_height"
            android:foreground="@drawable/fg_horde"
            android:clickable="true"
            android:background="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/tv_app_message_from_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:drawablePadding="4dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        tools:text="暴走的苹果"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"/>
                <TextView
                        android:id="@+id/tv_uuid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:visibility="visible"
                        tools:text="ID: 5858542"
                        android:textColor="@color/shop_text_no_select_color"
                        android:textSize="12sp"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/tv_app_message_chips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="4dip"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:ellipsize="end"
                    android:singleLine="true"
                    tools:text="+2000"
                    android:textColor="@color/login_solid_color"
                    android:textSize="14dp"/>
            <TextView
                    android:id="@+id/tv_buychips_weekout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="复活"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:background="@drawable/app_message_buychips_rebuy_tag_bg"
                    android:textSize="12dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="8dp"/>

            <TextView
                    android:id="@+id/tv_rebuy_cnt"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/app_message_buychips_rebuy_tag_bg"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textSize="12dp"
                    tools:text="R1"/>
        </LinearLayout>


        <LinearLayout
                android:id="@+id/operator_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/iv_action_reject"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_common_border"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="拒绝"
                    android:textColor="@color/login_solid_color"
                    android:textSize="13dp"/>

            <TextView
                    android:id="@+id/iv_action_agree"
                    android:layout_width="66dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:gravity="center"
                    android:layout_marginLeft="13dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:textSize="13dp"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_login_btn"
                    android:text="同意"/>

        </LinearLayout>

        <TextView
                android:id="@+id/operator_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text=""
                android:textColor="@color/login_solid_color"
                android:textSize="15dp"/>
        <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_alignParentBottom="true"
                android:background="@color/register_page_bg_color"/>
    </RelativeLayout>
</LinearLayout>