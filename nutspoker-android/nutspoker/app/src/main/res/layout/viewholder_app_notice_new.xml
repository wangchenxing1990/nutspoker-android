<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/top_pad"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/register_page_bg_color" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/notice_click_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:foreground="@drawable/fg_horde"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.htgames.nutspoker.view.roundedimageView.SelectableRoundedImageView
                android:id="@+id/mSelectableRoundedImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/system_notice_defalt"
                android:visibility="gone"
                app:sriv_border_color="@android:color/transparent"
                app:sriv_border_width="0dip"
                app:sriv_left_bottom_corner_radius="0dp"
                app:sriv_left_top_corner_radius="5dp"
                app:sriv_right_bottom_corner_radius="0dp"
                app:sriv_right_top_corner_radius="5dp" />

            <com.htgames.nutspoker.chat.app_msg.view.image.AppNoticeImageView
                android:id="@+id/iv_app_notice_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/system_notice_defalt"
                android:scaleType="fitXY"
                android:visibility="gone"
                app:exiv_default_image_res="@mipmap/system_notice_defalt"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_app_message_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="left|center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp"
                android:textColor="@color/shop_text_no_select_color"
                android:textSize="15dp"
                tools:text="公告title公告title公告title公告title公告title公告title公告title公告title公告title公告title公告title公告title公告title公告title公告title公告title" />

            <View
                android:id="@+id/view_app_message_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#C7CBD2" />

            <TextView
                android:id="@+id/tv_app_message_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="left|center_vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp"
                android:textColor="@color/shop_text_no_select_color"
                android:textSize="13dp"
                tools:text="公告content公告content公告content公告content公告content公告content公告content公告content公告content公告content公告content公告content公告content公告content公告content公告content" />

            <View
                android:id="@+id/view_app_message_divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#C7CBD2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp">

                <ImageView
                    android:id="@+id/iv_app_message_type"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/icon_msg_noticeinfo" />

                <TextView
                    android:id="@+id/tv_msg_notice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/app_name"
                    android:textColor="@color/shop_text_no_select_color"
                    android:textSize="13dp" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_message_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/icon_common_arrow_normal"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/shop_text_no_select_color"
                    android:textSize="12dp"
                    tools:text="11.24 15:38" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
    <View
        android:id="@+id/bottom_pad"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/register_page_bg_color" />
</LinearLayout>