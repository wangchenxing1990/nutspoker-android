<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_size_45"
    android:background="@drawable/common_column_bg">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_size_5"
        android:id="@+id/me_recycler_item_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_size_5"
        android:src="@mipmap/icon"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/me_recycler_item_text"
        android:layout_toRightOf="@id/me_recycler_item_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_size_5"
        android:textSize="@dimen/home_fragments_common_column_fontsize"
        android:textColor="@color/text_select_color"
        android:text="商城"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/me_recycler_item_reddot"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_size_10"
        android:visibility="gone"
        android:src="@drawable/nim_icon_reddot"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_size_10"
        android:src="@drawable/icon_common_arrow"
        android:id="@+id/me_recycler_item_arrow"/>

</RelativeLayout>