<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_player_other_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/match_room_top_bg">
            <LinearLayout
                android:id="@+id/check_in_count_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/match_top_other_info_height"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_mtt_count"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center_vertical|left"
                    android:layout_gravity="center"
                    android:text="已报名：0"
                    android:background="@android:color/transparent" />
                <TextView
                    android:id="@+id/tv_mtt_total_buy_count"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:gravity="center_vertical|left"
                    android:layout_gravity="center"
                    android:layout_alignParentLeft="true"
                    android:text="参赛人次：0"
                    android:background="@android:color/transparent" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_mtt_total_buy_count_right"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/white"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_alignParentRight="true"
                android:paddingRight="40dp"
                android:textSize="12sp"
                android:gravity="center_vertical|right"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:text="参赛人次：0"
                android:background="@android:color/transparent" />
            <com.htgames.nutspoker.view.switchbutton.SwitchButton
                android:id="@+id/ck_game_control_into"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/match_top_other_info_height"
                android:paddingTop="14dp"
                android:layout_alignParentRight="true"
                android:paddingRight="40dp"
                app:kswAnimationDuration="300"
                app:kswBackDrawable="@drawable/ios_back_drawable"
                app:kswBackMeasureRatio="1.8"
                app:kswThumbDrawable="@mipmap/slide_toggle" />
            <TextView
                android:id="@+id/ck_game_control_into_des"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/match_top_other_info_height"
                android:paddingRight="10dp"
                android:textColor="@color/white"
                android:gravity="center_vertical|left"
                android:text="@string/game_match_room_control_into"
                android:layout_toLeftOf="@id/ck_game_control_into"
                android:textSize="12sp" />
            <RelativeLayout
                android:id="@+id/search_and_sort_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/check_in_count_container"
                android:background="@color/match_list_column_search_bg_color">
                <RelativeLayout
                    android:id="@+id/rl_player_search"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    tools:visibility="visible"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/tv_search_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="@string/cancel"
                        android:textColor="@color/mtt_text_common_color" />
                    <com.htgames.nutspoker.view.widget.ClearableEditTextWithIcon
                        android:id="@+id/edt_player_search"
                        style="@style/edt_common_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@id/tv_search_cancel"
                        android:hint="@string/match_search_player_hint"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:paddingBottom="0dp"
                        android:paddingTop="0dp"
                        android:textSize="12sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_player_search_btn"
                    android:layout_width="match_parent"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:layout_height="@dimen/match_top_column_height"
                    tools:layout_below="@id/rl_player_search">
                    <LinearLayout
                        android:id="@+id/match_sort_type_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal"
                        android:layout_toLeftOf="@+id/match_sort_hunter_mark">
                        <TextView
                            android:id="@+id/tv_match_sort_type"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:alpha="0.6"
                            android:paddingRight="5dp"
                            android:text="玩家"/>
                        <ImageView
                            android:id="@+id/iv_match_sort_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/list_select"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/match_sort_hunter_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:paddingLeft="40dp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:alpha="0.6"
                        tools:text="猎头"/>
                    <TextView
                        android:id="@+id/match_sort_chips"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|right"
                        android:textSize="14sp"
                        android:layout_toRightOf="@+id/match_sort_hunter_mark"
                        android:layout_toLeftOf="@+id/tv_player_search_hint"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:alpha="0.6"
                        android:text="记分牌"/>
                    <TextView
                        android:id="@+id/tv_player_search_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:drawablePadding="5dp"
                        android:drawableRight="@mipmap/icon_match_player_search"
                        android:gravity="center"
                        android:text="     "
                        android:textSize="14sp" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mRecyclerView"
                style="@style/recyclerview_common_style" />

            <com.htgames.nutspoker.view.ResultDataView
                android:id="@+id/mResultDataView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>