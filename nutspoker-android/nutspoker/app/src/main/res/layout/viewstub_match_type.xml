<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/pineapple_mode_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="10dp"
              android:gravity="center"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/match_type_normal"
        style="@style/pineapple_mode_text"
        android:layout_marginRight="12dp"
        android:text="@string/match_type_normal"/>

    <TextView
        android:id="@+id/match_type_gold"
        style="@style/pineapple_mode_text"
        android:layout_marginRight="12dp"
        android:text="@string/match_type_gold"/>

    <TextView
        android:id="@+id/match_type_diamond"
        style="@style/pineapple_mode_text"
        android:text="@string/match_type_diamond"/>

</LinearLayout>