<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_game_share"
    android:layout_width="wrap_content"
    android:minWidth="@dimen/game_code_width"
    android:maxWidth="180dp"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/game_code_height"
    android:layout_centerInParent="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/bg_game_code">

    <ImageView
        android:id="@+id/iv_club_match_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/message_system"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_game_table_wait"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_horizontal|bottom"
        android:paddingTop="2dp"
        android:text="@string/game_table_wait_code"
        android:textColor="@color/white"
        android:alpha="0.32"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_game_share_code"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:includeFontPadding="false"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:gravity="center"
        tools:text="222111"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_game_share_code_click"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_horizontal|top"
        android:layout_weight="2"
        android:paddingBottom="2dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:text="@string/game_table_wait_clickshare"
        android:textColor="@color/white"
        android:alpha="0.32"
        android:textSize="13sp" />
</LinearLayout>