<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="55dp"
                                    android:foreground="@drawable/fg_horde"
                                    android:orientation="vertical"
                                    app:cardBackgroundColor="@android:color/white"
                                    app:contentPaddingLeft="10dp"
                                    app:contentPaddingRight="15dp"
                                    app:cardCornerRadius="4dp"
                                    app:cardPreventCornerOverlap="false"
                                    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_time"
            tools:text="周二\n08/28"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shop_text_no_select_color"
            android:paddingRight="15dp"/>
        <com.netease.nim.uikit.common.ui.imageview.HeadImageView
            android:id="@+id/iv_head"
            android:src="@mipmap/fund_icon_purchase"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_log_desc_top"
                android:paddingLeft="10dp"
                tools:text="发放给周智慧"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"/>
            <TextView
                android:id="@+id/tv_log_desc_below"
                android:paddingLeft="10dp"
                tools:text="周智慧"
                android:textColor="@color/shop_text_no_select_color"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="15dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_fund"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="23342"
        android:textSize="15dp"
        android:layout_gravity="right|center_vertical"/>
</android.support.v7.widget.CardView>