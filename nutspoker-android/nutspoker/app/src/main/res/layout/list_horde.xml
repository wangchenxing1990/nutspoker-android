<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/bg_clan_me"
    android:foreground="@drawable/fg_horde"
    android:layout_height="170dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="35dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/horde_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            tools:text="htg部落联盟"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:alpha="0.8"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_horde"/>
    </LinearLayout>
    <TextView
        android:id="@+id/horde_vid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:paddingBottom="15dp"
        android:textSize="16dp"
        tools:text="ID：1234567"
        android:textColor="@color/white"
        android:alpha="0.8"/>
    <TextView
        android:id="@+id/tv_horde_playing_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/tags_caln_list_game"
        android:textColor="@color/white"
        android:drawablePadding="5dp"
        android:layout_gravity="right|bottom"
        android:paddingRight="20dp"
        android:paddingBottom="15dp"
        android:text="0进行中"/>
</FrameLayout>