<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_record_member_column"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="4dp">

    <TextView
        android:id="@+id/tv_game_memeber"
        style="@style/record_details_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/icon_club_chat_member"
        android:gravity="left"
        android:paddingLeft="30dp"
        android:textColor="@color/shop_text_no_select_color"
        android:text="@string/record_details_colunm_members" />

    <TextView
        android:id="@+id/tv_details_all_buy_title"
        style="@style/record_details_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:textColor="@color/shop_text_no_select_color"
        tools:text="猎头/赏金"
        android:gravity="center"
        android:text="@string/record_details_colunm_all_buy" />

    <TextView
        android:id="@+id/tv_details_all_gain_title"
        style="@style/record_details_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:textColor="@color/shop_text_no_select_color"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="@string/record_details_colunm_all_winchips" />

</LinearLayout>

