<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_discovery_edit"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="5dp">

        <EditText
            android:id="@+id/edt_discovery_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:textColor="@color/btn_circle_send_normal_color"
            android:textColorHint="@color/btn_circle_send_normal_color"
            android:textCursorDrawable="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/edt_discovery_edit"
            android:background="@color/btn_circle_send_normal_color" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/nim_message_input_emotion"
            android:visibility="gone" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_comment_send"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_circle_send"
        android:text="@string/comment_input_send"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</LinearLayout>