<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@color/white"
    android:clickable="true"
    android:foreground="@drawable/fg_horde"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/album_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        tools:background="@color/red_normal" />

    <TextView
        android:id="@+id/album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:paddingLeft="95dp"
        android:paddingTop="18dp"
        android:textColor="@color/text_select_color"
        tools:text="所有图片" />

    <TextView
        android:id="@+id/album_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="18dp"
        android:paddingLeft="95dp"
        android:textColor="@color/shop_text_no_select_color"
        tools:text="2张" />

    <ImageView
        android:id="@+id/iv_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:tint="@color/login_solid_color"
        android:src="@mipmap/list_check" />

</FrameLayout>