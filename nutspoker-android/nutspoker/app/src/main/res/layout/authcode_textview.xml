<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="@dimen/auth_code_single_code_width">
    <TextView
        android:layout_width="@dimen/auth_code_single_code_width"
        android:layout_height="@dimen/auth_code_single_code_width"
        android:layout_centerInParent="true"
        android:id="@+id/auth_code_tv"
        android:textSize="@dimen/dp_size_15"
        android:gravity="center"
        android:textColor="@color/login_grey_color"/>
    <View
        android:layout_width="@dimen/auth_code_single_code_width"
        android:background="@color/btn_action_gray_press_color"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_size_8"
        android:layout_marginRight="@dimen/dp_size_8"
        android:layout_marginTop="-5dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>