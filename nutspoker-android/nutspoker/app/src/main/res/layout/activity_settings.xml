<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_page_bg_color"
    android:orientation="vertical">

    <include layout="@layout/view_common_head" />
    <!-- 消息声音 -->
    <RelativeLayout
        android:id="@+id/rl_message_sound"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="@dimen/dp_size_55"
        android:background="@drawable/common_column_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_size_10"
            android:text="@string/settings_column_message_sound"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:typeface="monospace" />

        <com.htgames.nutspoker.view.switchbutton.SwitchButton
            android:id="@+id/switch_message_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            app:kswAnimationDuration="300"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            app:kswBackMeasureRatio="1.8"
            app:kswThumbDrawable="@mipmap/slide_toggle" />
    </RelativeLayout>
    <!-- 消息震动 -->
    <RelativeLayout
        android:id="@+id/rl_message_shake"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_55"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:background="@drawable/common_column_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_size_10"
            android:text="@string/settings_column_message_shake"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:typeface="monospace" />

        <com.htgames.nutspoker.view.switchbutton.SwitchButton
            android:id="@+id/switch_message_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            app:kswAnimationDuration="300"
            app:kswBackDrawable="@drawable/ios_back_drawable"
            app:kswBackMeasureRatio="1.8"
            app:kswThumbDrawable="@mipmap/slide_toggle" />
    </RelativeLayout>
    <!-- 当前版本 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_55"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:onClick="toDevelopAC"
        android:background="@drawable/common_column_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_size_10"
            android:text="@string/settings_column_app_current_version"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/setting_current_app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:text="v1.2.4"
            android:textColor="@color/shop_text_no_select_color"
            android:textSize="14dp"
            android:typeface="monospace" />
    </RelativeLayout>
    <!-- 资源版本 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_55"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:background="@drawable/common_column_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_size_10"
            android:text="@string/settings_column_game_current_version"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/setting_current_game_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:text="v1.2.4"
            android:textColor="@color/shop_text_no_select_color"
            android:textSize="14dp"
            android:typeface="monospace" />
    </RelativeLayout>

    <TextView
        android:id="@+id/settings_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_size_55"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:clickable="true"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:text="@string/settings_column_logout" />

</LinearLayout>
