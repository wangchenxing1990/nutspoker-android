<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/mgr_info_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/match_room_top_bg">
        <TextView
            android:id="@+id/mgr_gamecode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:text="我的邀请码：234567"
            android:textColor="@color/white"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|"
            android:layout_gravity="right|center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mgr_action_checkin_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报名人数：0"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/mgr_action_buyin_cnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买入次数：0"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/mgr_sort_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_mtt_count"
        android:background="@color/match_list_column_search_bg_color">
        <RelativeLayout
            android:id="@+id/rl_player_search"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            tools:visibility="visible"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_search_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/cancel"
                android:textColor="@color/mtt_text_common_color" />
            <com.htgames.nutspoker.view.widget.ClearableEditTextWithIcon
                android:id="@+id/edt_player_search"
                style="@style/edt_common_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/tv_search_cancel"
                android:hint="@string/match_search_player_hint"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textSize="12sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_player_search_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/match_top_column_height"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            tools:layout_below="@id/rl_player_search">
            <LinearLayout
                android:id="@+id/match_sort_type_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/match_sort_hunter_mark">
                <TextView
                    android:id="@+id/tv_match_sort_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:alpha="0.6"
                    android:paddingRight="5dp"
                    android:text="玩家"/>
                <ImageView
                    android:id="@+id/iv_match_sort_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/list_select"/>
            </LinearLayout>
            <TextView
                android:id="@+id/match_sort_hunter_mark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="14sp"
                android:paddingLeft="40dp"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:alpha="0.6"
                tools:text="猎头"/>
            <TextView
                android:id="@+id/match_sort_chips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/match_sort_hunter_mark"
                android:layout_toLeftOf="@+id/tv_player_search_hint"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:alpha="0.6"
                android:text="记分牌"/>
            <TextView
                android:id="@+id/tv_player_search_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/icon_match_player_search"
                android:gravity="center"
                android:text="     "
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.htgames.nutspoker.view.ResultDataView
            android:id="@+id/mResultDataView"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/register_page_bg_color">
            <com.htgames.nutspoker.ui.recycler.MeRecyclerView
                android:id="@+id/search_mtt_mgr_recycler"
                android:background="@color/transparent"
                app:dividerHeight="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </FrameLayout>
</LinearLayout>