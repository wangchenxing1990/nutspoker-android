<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/anim_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/list_item_bg_press"
        android:paddingTop="100dp">
        <com.htgames.nutspoker.view.TouchableRecyclerView
            android:id="@+id/album_recycler"
            app:dividerHeight="1.5dp"
            android:background="@color/register_page_bg_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</FrameLayout>