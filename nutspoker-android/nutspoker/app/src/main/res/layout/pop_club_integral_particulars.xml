<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_pop_arrow"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="4dp"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_common_arrow_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pop_arrow"
        android:background="@drawable/pop_contact_bg"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_pop_integral_record_all"
            style="@style/ll_contact_pop_column_style">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/club_integral_record_all"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <View style="@style/contact_pop_column_divider_style" />

        <LinearLayout
            android:id="@+id/ll_pop_integral_record_distribution_creator"
            style="@style/ll_contact_pop_column_style">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/club_integral_record_distribution_creator"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <View style="@style/contact_pop_column_divider_style" />

        <LinearLayout
            android:id="@+id/ll_pop_integral_record_donation_my"
            style="@style/ll_contact_pop_column_style">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/club_integral_record_donation_my"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <View style="@style/contact_pop_column_divider_style" />

        <LinearLayout
            android:id="@+id/ll_pop_integral_record_profit"
            style="@style/ll_contact_pop_column_style">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/club_integral_record_profit"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>