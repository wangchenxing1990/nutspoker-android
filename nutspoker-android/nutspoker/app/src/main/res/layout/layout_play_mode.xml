<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <FrameLayout
            android:id="@+id/texas_holdem_container"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/common_column_bg"
            android:layout_height="45dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="@string/texas_holdem"
                android:textColor="@color/text_select_color"/>
            <ImageView
                android:id="@+id/iv_texas_holdem_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:tint="@color/login_solid_color"
                android:src="@mipmap/list_check"/>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/register_page_bg_color"/>

        <FrameLayout
            android:id="@+id/omaha_container"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/common_column_bg"
            android:layout_height="45dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="@string/omaha"
                android:textColor="@color/text_select_color"/>
            <ImageView
                android:id="@+id/iv_omaha_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:tint="@color/login_solid_color"
                android:src="@mipmap/list_check"/>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/register_page_bg_color"/>

        <FrameLayout
            android:id="@+id/pineapple_container"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:background="@drawable/common_column_bg"
            android:layout_height="45dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:text="@string/pine_apple"
                android:textColor="@color/text_select_color"/>
            <ImageView
                android:id="@+id/iv_pineapple_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:tint="@color/login_solid_color"
                android:src="@mipmap/list_check"/>
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/set_play_mode_space"
        android:layout_width="match_parent"
        android:layout_height="10000dp"
        android:background="@color/list_item_bg_press"/>
</LinearLayout>